/**app.wxss**/

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.part_line {
  height: 10rpx;
  display: flex;
  background: #eff1f4;
}

.flex {
  display: flex;
}

.fixed{
  position: fixed;
}

.line {
  height: 1px;
  display: flex;
  background: #eff1f4;
}

.small_gray_text {
  font-size: 11pt;
  color: #898989;
}

.margin_small {
  margin: 10rpx 0;
}

.margin_normal {
  margin:  20rpx 0;
}

/*水平布局*/

.horizontal_layout {
  display: flex;
  flex-direction: row;
}

/*竖直布局*/

.vertical_layout {
  display: flex;
  flex-direction: column;
}

.vertical_middle {
  align-items: center;
}
